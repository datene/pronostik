<%= render 'dashboard/top_bar' %>
<br><br>

<div class="container">
  <div class="row">
    <div class="col-sm-7">
      <div class="panel panel-info" style="border: solid 1px black">
        <div class="panel-header">
          <div class="nav nav-success inline-block">
            <div class="navbar-header list-inline">
              <%= render 'dashboard/perso_nav' %>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <div class="panel-body">
            <div>
            <h3>Your Forecast Score is : <%= @fc_score%></h3>
            <h3>Your total accuracy : <%= @accuracy%> %</h3>
            </div>
            <div>
              <h3>What you bet the most on:</h3>
              <%= pie_chart @bets_per_cat %>
            </div>
            <div>
              <h3>Your accuracy for each category (in %)  </h3>
              <%= column_chart @accuracy_per_cat%>
            </div>
            <h3>Recommendation:</h3>
            <% unless @recommendation.nil? || @recommendation.empty? %>
            <p> Bet more on questions related to <%= @recommendation %> ! </p>
            <% end %>

          </div>
        </div>

        <div class="panel-footer">

        </div>
      </div>
    </div>
    <div class="col-sm-3 col-sm-offset-1">

      <%= render 'dashboard/side_bar', randque: @randque %>
    </div>
  </div>
</div>
