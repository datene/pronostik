<%= render 'dashboard/top_bar' %>
<br><br>
<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <div class="panel panel-info">
        <div class="panel-header">
          <div class="nav nav-success  inline-block">
            <div class="navbar-header ">
              <div class="span2">
              </div>
            </div>
            <ul class="nav navbar-nav list-inline">
              <li class ='nav-pill'>
                <%= link_to 'statistics', dashboard_statistics_path  %>
              </li>
              <li class ='nav-pill'>
                <%= link_to 'questions', dashboard_questions_path %>
              </li>
              <li class ='nav-pill'>
                <%= link_to 'justifications', dashboard_bets_path %>
              </li>
              <li class ='nav-pill'>
                <%= link_to 'history', dashboard_history_path %>
              </li>
            </ul>
          </div>
        </div>
        <div class="panel-body">
          <% @queries.each do |que| %>
          <div class="panel" style="border: solid 1px green">
            <%= link_to question_path(que) do %>
            <div class="panel-heading">
              <h3 class="panel-title"> <%= que.content  %> </h3>
            </div>
            <div class="panel-body"> <ul>
              <% que.scenarios.each do |scen| %>
              <li> <%= scen.content %> </li>
              <% end %>
            </ul>
            <ul>
              <% que.tags.each do |tag| %>
              <div class="label label-info">
                <%= tag.title %>
              </div>
              <% end %>
            </ul>
          </div>
          <% end %>
          <div class="text-muted text-right">
            <%= que.event_date %>
          </div>
          <div class="panel-footer">
            <%= que.category.title %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-sm-3 col-sm-offset-1">

    <%= render 'dashboard/side_bar', randque: @randque %>
  </div>
</div>
</div>
