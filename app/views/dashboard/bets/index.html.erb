<%= render 'dashboard/top_bar' %>
<br><br>
<div class="container">
  <div class="row">
    <div class="col-sm-5 col-sm-offset-1">
      <div class="panel panel-info">
        <div class="panel-header">
          <div class="nav nav-success inline-block">
            <div class="navbar-header ">
              <div class="span2">
              </div>
            </div>
            <ul class="nav navbar-nav list-inline">
              <li class ='nav-pill'>
                <%= link_to 'statistics', dashboard_statistics_path  %>
              </li>
              <li class ='nav-pill'>
                <%= link_to 'questions', dashboard_questions_path %>
              </li>
              <li class ='nav-pill'>
                <%= link_to 'justifications', dashboard_bets_path %>
              </li>
              <li class ='nav-pill'>
                <%= link_to 'history', dashboard_history_path %>
              </li>
            </ul>
          </div>
        </div>
        <div class="panel-body">
          <div class="panel panel-default panel-boredered">
            <% @bets.each do |bet| %>
            <div class="panel-header">
              <strong> <%= bet.scenario.question.content %> : </strong>
            </div>
            <ul>  <% bet.scenario.question.scenarios.each do |scen| %>
              <li>
                <%= scen.content %>
                <% if scen == bet.scenario; %>
                <div class="progress">
                  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= bet.estimation %>%;">
                    <%= bet.estimation %> %
                  </div>
                </div>
                <% end %>
              </li>
              <% end %>
            </ul>
            <%end%>
          </div>
        </div>
        <div class="panel-footer">
        </div>
      </div>
    </div>
<div class="col-sm-3 col-sm-offset-1">

  <%= render 'dashboard/side_bar', randque: @randque %>
</div>
  </div>
</div>
