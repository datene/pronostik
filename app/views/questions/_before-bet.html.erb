<%= render 'question-show', question: question %>


<div class="row">
  <div class="col-sm-3">
    <div class="card-sean" id="sean">
      <div class="text-center">
      <h3>Resources</h3>
      <p>Ranked by popularity</p>
      </div>
      <% if @bets.empty? %>
      <div>| See what are the most used resources </div>
      <div>| No resources yet</div>
      <% end %>
      <ol> <% @bets.each do |bet| %>
        <li>
          <%= bet.Url %>
        </li>
        <%end%>
      </ol>
    </div>
  </div>
  <div class="col-sm-9">
    <div class="card-sean text-center">
      <h3>Scenarios</h3>
      <p>Bet on a scenario and select a certainty level <%= link_to "(Find out more)", faq_path %></p>

      <% @scenarios.each do |scenario|%>
        <%#= link_to scenario.id, '#', class: "js-scenario-choice", data: { id: scenario.id } %>
        <%= scenario.content.capitalize %>
        <%= bootstrap_form_for @bet, url: question_bets_path(@question) do |f| %>
        <%= f.hidden_field :scenario_id, value: scenario.id%>
        <%= f.range_field :estimation, in: 1..100, step: 1, label: 'estimation', class: 'slider' %>
        <%= f.submit %>
      <%end%>
    <%end%>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <div class="card-sean">
  <h3>Bet on a Scenario to unlock other users' justifications</h3></div>
  </div>
</div>
