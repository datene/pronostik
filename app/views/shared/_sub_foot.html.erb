<div id="randque-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <div class="card-sean">
          <div class="row">
            <div class="col-xs-7">
              <div class="text-left">
                <p> Do you know what tomorrow brings?</p>
                <h4> Check out your ranking </h4>
                <h4> in forecasting</h4>
                <br>
                <%= link_to bets_path do %>
                <h3>
                  <span class="label label-danger">Ranking</span>
                </h3>
                <% end %>
              </div>
            </div>
            <div class="col-xs-5">
              <div class="fa fa-spinner fa-pulse fa-5x fa-fw slow-spin" style= "color: #293159">

              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="card-sean">
          <div class="row">
            <div class="col-xs-7">
              <div class="text-left">
                <p> Dive in your personal statistics</p>
                <h4> Are you improving?</h4>
                <br>
                <br>
                <%= link_to dashboard_statistics_path(current_user) do %>
                <h3>
                  <span class="label label-danger">Your stats</span>
                </h3>
                <% end %>
              </div>
            </div>
            <div class="col-xs-5 text-center">
              <div class='fa fa-cog fa-spin fa-5x fa-fw slow-spin' style= "color: #293159"> </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
